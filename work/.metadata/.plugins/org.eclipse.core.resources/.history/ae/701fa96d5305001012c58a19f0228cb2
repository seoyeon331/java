package ex04_casting;

public class Ex01_casting {
	public static void main(String[] args) {
		//형 변환
		//데이터를 다른 자료형의 데이터로 변환하는 것을 의미
		//모든 연산은 기본적으로 같은 자료형끼리만 가능
		//서로 다른 자료형의 연산을 수행하기 위해서는 
		// 같은 자료형으로 변환해야 한다
		
		//형변환은 숫자를 담을 수 있는 기본 자료형간에만 가능
		//정수형, 실수형 뿐만 아니라, char(문자이면서 숫자이기도한)도 가능
		
		//자동형변환 -> 자바컴파일러가 자동으로 해줌
		//작은 자료형 -> 큰 자료형
		//정수형 -> 실수형
		
		//강제형변환
		//(원하는자료형) 데이터 또는 변수
		
		//int -> byte 강제형변환(*값이 큰 경우)
		int j = 1000;
		byte k = (byte) j;
		
		
		
	}
}
