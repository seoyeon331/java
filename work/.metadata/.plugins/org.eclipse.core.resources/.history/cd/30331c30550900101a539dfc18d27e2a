package ex04_exam;

public class MethodTest {
	
		 
		//배열의 최대값을 찾는 maxFinder메서드
		//임의의 배열은 매개변수로 받자
		
		public void max(int[] arr) {
			
			int maxNum = arr[0];
			
			for(int i = 0; i < arr.length; i++) {
				if(arr[i] > maxNum) {
					maxNum = arr[i];
				}
			}
			System.out.printf("최대값은 %d입니다.", maxNum);
		}
		
	//향상된 for문 사용
//		for(i : arr) {
//			if(i > maxNum) {
//				maxNum = i;
//			}
//		}
	
		//원의 넓이와 둘레 구하기
		//함수를 호출하면서 반지름을 받는다
		//원의 넓이를 구하는 circleArea
		//원의 둘레를 구하는 circleRound
		//circleArea 결과 출력
		//circleRound 결과 반환
		//원의 넓이 : 3.14 * r * r
		//원의 둘레 : 2 * 3.14 * r
		
		public void circleArea(int r) {
			double area = 3.14 * r * r;
			System.out.println("원의 넓이 : " + area);
		}
		
		public double circleRound(int r) {
			double round = 2 * 3.14 * r;
			return round;
		}
		
		
		//계산기 만들기
		//사칙연산을 할 수 있는 calculator메서드 만들기
		//두 수와 연산자를 매개변수로 받는다
		
		public int calculator(int a, int b, char x) {
			
			switch(x) {
			
			case '+' : System.out.println(a + b);
				break;
			case '-' : System.out.println(a - b);
				break;
			case '*' : System.out.println(a * b);
				break;
			case '/' : System.out.println(a / b);
				break;
			
			
			
			}
			
			
			
			
			
			
			
			
		}
		
					
			
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
}
