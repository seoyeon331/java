package ex06_operator;

public class Ex_operator {
	public static void main(String[] args) {
		//비트연산자
		//논리연산자와 유사하지만 bit단위의 연산만 가능하다
		//& : 두항이 모두 참이면 참 아니면 거짓
		//| : 두항중 하나라도 참이면 참 아니면 거짓
		//^ : 두항이 다르면 참 같으면 거짓
		//~ : 참을 거짓으로 거짓을 참으로 연산
	
		int a = 10; //1010
		int b = 7; //0111
		int c = a & b; // c->2
		System.out.println(c); //2
			
		int a2 = 12; //1100
		int b2 = 8; //1000 
		int c2 = a2 | b2;
		System.out.println(c2); //12
		
		int a3 = 9; //1001
		int b3 = 11; //1011
		int c3 = a3 ^ b2; //0010
		System.out.println(c3); //1
		
		int x = 7; //0111
		System.out.println(~x); //-8
		//~x -> -(x+1)
		
		//시프트연산자 1010 -> 
		//비트의 이동
		// <<, >>
		
		x = 10;
		int result = x << 1; //20
		System.out.println(result);
	}

}
