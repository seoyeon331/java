package ex01_multi_array;

public class Ex01_array {
	public static void main(String[] args) {
		int[][] arr = new int[2][3];
		//2차원 배열의 요소는 2개
		
		arr[0][0] = 1;
		arr[0][1] = 2;
		arr[0][2] = 3;
		arr[1][0] = 4;
		arr[1][1] = 5;
		arr[1][2] = 6;
		
		//1 2 3
		//4 5 6
		
		
		for(int i = 0; i < arr.length; i++){
			
			for(int j = 0; j < arr[i].length; j++){
						
				System.out.print(arr[i][j] + " ");
						
			}
			System.out.println();		
		}
		
		//2차원 배열에 들어있는 1차우너 배열의 길이를 보는 방법
		System.out.println(arr[0].length);
		
		
		int[][] arr2 = new int[3][];
		arr2[0] = new int[2]; //1차원 배열의 길이가 2
		arr2[1] = new int[3];
		arr2[2] = new int[1];
		
		
		
		
		
		
		
		
	}
}
